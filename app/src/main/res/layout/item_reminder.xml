<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.App.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:foreground="@drawable/ripple_effect"
    app:contentPadding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Priority Color Bar -->
        <View
            android:id="@+id/priority_indicator"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@drawable/priority_indicator_high"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Checkbox for completion -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_complete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/mark_complete"
            app:buttonTint="@color/primary"
            app:layout_constraintStart_toEndOf="@id/priority_indicator"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:paddingVertical="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox_complete"
            app:layout_constraintEnd_toStartOf="@id/action_buttons"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Title -->
            <TextView
                android:id="@+id/reminder_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Submit DBMS Assignment"
                android:textAppearance="@style/TextAppearance.App.Title.Medium"
                android:textColor="@color/text_primary"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/reminder_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Complete all queries and documentation"
                android:textAppearance="@style/TextAppearance.App.Body.Medium"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Time/Date Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Time Icon & Text -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_variant"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="6dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_time_24"
                            app:tint="@color/secondary" />

                        <TextView
                            android:id="@+id/reminder_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            tools:text="Tomorrow, 11:59 PM"
                            android:textAppearance="@style/TextAppearance.App.Body.Small"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Priority Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/priority_chip"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="High"
                    android:textSize="11sp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:chipIconVisible="true"
                    app:chipIcon="@drawable/ic_priority_high_24"
                    app:chipIconSize="14dp"
                    app:chipMinHeight="24dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons (Right side) -->
        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/cd_delete_button"
                app:icon="@drawable/ic_delete_24"
                app:iconSize="20dp"
                app:iconTint="@color/error"
                app:iconPadding="0dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
