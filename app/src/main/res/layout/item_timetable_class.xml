<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.App.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:foreground="@drawable/ripple_effect"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Day/Status Badge (Left side) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/day_badge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/day_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="MON"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:alpha="0.9" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_class"
                    android:contentDescription="@string/cd_class_icon"
                    app:tint="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Class Details (Center) -->
        <LinearLayout
            android:id="@+id/class_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/day_badge"
            app:layout_constraintBottom_toBottomOf="@id/day_badge"
            app:layout_constraintStart_toEndOf="@id/day_badge"
            app:layout_constraintEnd_toStartOf="@id/status_indicator">

            <!-- Class Name -->
            <TextView
                android:id="@+id/class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Data Structures &amp; Algorithms"
                android:textAppearance="@style/TextAppearance.App.Title.Medium"
                android:textColor="@color/text_primary"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

            <!-- Class Type & Room -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.chip.Chip
                    android:id="@+id/class_type_chip"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Lecture"
                    android:textSize="11sp"
                    app:chipMinHeight="24dp"
                    app:chipBackgroundColor="@color/secondary_light" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_location_24"
                    app:tint="@color/text_tertiary" />

                <TextView
                    android:id="@+id/class_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    tools:text="CS-302"
                    android:textAppearance="@style/TextAppearance.App.Body.Small"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

        </LinearLayout>

        <!-- Status Indicator (Right side - optional) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/status_indicator"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            app:cardBackgroundColor="@color/success"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/day_badge"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/day_badge" />

        <!-- Time Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- Start Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_time_24"
                    app:tint="@color/secondary" />

                <TextView
                    android:id="@+id/class_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="09:00 - 10:30 AM"
                    android:textAppearance="@style/TextAppearance.App.Body.Medium"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Duration Badge -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface_variant"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    tools:text="90 min"
                    android:textAppearance="@style/TextAppearance.App.Body.Small"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
